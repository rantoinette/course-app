<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head') %>
<body>
    <%- include('partials/loggedNav') %>
    <div class="container-fluid">
        <div class="mt-5 container">
            <div class="card">
                <div class="card-header">
                    Registered Classes
                </div>
                <div class="card-body">
                    <table class="table table-bordered table-hover">
                        <thead>
                          <tr>
                            <th scope="col">No.</th>
                            <th scope="col">Class Name</th>
                            <th scope="col">Day/Period</th>
                            <th scope="col">Description</th>
                            <th scope="col">Action</th>
                          </tr>
                        </thead>
                        <tbody>
                               <% studentClass.map((classroom, index) => { %>
                                    <tr>
                                        <td><%= index + 1 %> </td>
                                        <td><%= classroom.Class.name %></td>
                                        <td><%= classroom.Class.combineDayPeriod() %></td>
                                        <td><%= classroom.Class.description %></td>
                                        <td>
                                            <a href="/student/classes/<%= classroom.Class.id %>/edit" class="btn btn-warning">Edit</a>
                                            <a href="/student/classes/<%= classroom.Class.id %>/drop" class="btn btn-danger">Drop</a>
                                        </td>
                                    </tr>
                               <% }) %> 
                        </tbody>
                      </table>
                </div>
            </div>
        </div>
    </div>
</body>
</html>