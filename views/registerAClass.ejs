<!DOCTYPE html>
<html lang="en">
<head>
   <%- include('partials/head') %>
</head>
<body>
    <%- include('partials/loggedNav') %>
    <% if (error) { %>
        <div class="p-3 mb-2 bg-danger text-white"><%= error  %> </div>
    <% } %>
    <div class="container-fluid">
        <div class="mt-5 container">
            <div class="card">
                <div class="card-header">
                Register a class!
                </div>
                <div class="card-body">
                    <form action="/classes/<%= data.id %>/register" method="post">
                        <fieldset disabled>
                            <div class="form-group">
                              <label for="name">Class Name</label>
                              <input type="text" name="name" id="name" class="form-control" placeholder="<%= data.name %>">
                            </div>
                            <div class="form-group mt-3">
                                <label for="day">Day</label>
                                <input type="text" name="day" id="day" class="form-control" placeholder="<%= data.day %>">
                            </div>
                            <div class="form-group mt-3">
                                <label for="period">Period</label>
                                <input type="text" name="period" id="period" class="form-control" placeholder="<%= data.period %>">
                            </div>
                            <div class="form-group mt-3">
                                <label for="description">Description</label>
                                <textarea type="text" name="description" id="description" class="form-control" placeholder="<%= data.description %>"></textarea>
                            </div>
                            <div class="form-group mt-3">
                                <label for="class_price">Price</label>
                                <input type="text" name="class_price" id="class_price" class="form-control" placeholder="<%= currencyFormat(data.class_price) %>">
                            </div>
                          </fieldset>
                        <button type="submit" class="btn btn-primary mt-3">Register</button>
                      </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>